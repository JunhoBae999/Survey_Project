<!doctype html>
<html lang="en">
  <head>
    <%- include('./partial/head') %>
    <script src="https://kit.fontawesome.com/26411beeb8.js" crossorigin="anonymous"></script>
    <style>
      
      @import url('https://fonts.googleapis.com/css2?family=Comfortaa:wght@500&display=swap');

      *{
        margin: 0;
        padding: 0;
        outline: none;
        box-sizing: border-box;
        
      }

      .wrapper {
        position: absolute;
        top:50%;
        left:50%;
        transform: translate(-50%, -50%);
        background: rgba(0, 0, 0, 0.6);
        max-height: 550px;
        width:70%;
        padding: 15px;
        border-radius: 5px;
        display: flex;
        justify-content: space-between;     

      }

      .input {
        text-align: left;
      }

      .wrapper .input {
        width: 85%;
        padding: 15px 20px;
        border: none;
        border-radius: 5px;
        font-weight: bold;
      }

      .searchbtn {
        background: #ada971;
        width: 10%;
        border-radius: 5px;
        position: relative;
        cursor: pointer;
      }

      .searchbtn .fas {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        font-size: 20px;
      }
    </style>
  </head>

  <body class="text-center">
    <div class="cover-container d-flex w-200 h-200 p-3 mx-auto flex-column">
  
  <!--헤더 부분-->      
  <header class="masthead">
    <%- include('./partial/nav') %>
  </header>
  <!--헤더 부분 끝-->

  <!--가운데 메인 부분-->

  <main role="main" class="inner cover">
    <div class="wrapper">
      <input type="text" class="input" placeholder="Copy your Survey Link">
      <div class="searchbtn">
        <i class="fas fa-search"></i>
      </div>
    </div>
  </main>
  
  <!--가운데 메인 부분 끝-->

<!--맨 아랫부분-->
  <footer class="mastfoot mt-auto">
      <div class="inner">
      <p>Prototype for <a href="https://getbootstrap.com/">survey service</a></p>
    </div>
  </footer>
</div>
</body>
</html>
